<ul class="list-group" style="max-width:450px">
	{{#each info}}
		<li class="list-group-item" >
			<h4 class="list-group-item-heading"><a href="#/users/{{author._id}}">{{author.nick}}			</a> 
			left post on 
			<a href="#/users/{{owner._id}}">{{owner.nick}}'s</a> wall</h4>

			<p class="list-group-item-text" style="overflow: hidden; height:100%; width:100%;  white-space: pre-wrap; white-space: -moz-pre-wrap; word-wrap: break-word;">{{content}}</p>
		</li>
	{{/each}}
</ul>
