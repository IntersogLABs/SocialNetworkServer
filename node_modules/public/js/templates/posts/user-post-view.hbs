<li class="list-group-item" >
	{{#if Edit}}
		<button type="button" class="close" aria-label="Close" id="close"><span aria-hidden="true" data-id={{_id}}>&times;</span></button>
		
		<button type="button" class="close" aria-label="Pencil" style="margin-right:5px; font-size:12px; margin-top:5px" id="transform">
  			<span class="glyphicon glyphicon-pencil" aria-hidden="true" data-authorid={{author._id}}>
  			</span>
		</button>
	{{/if}}

	<h4 class="list-group-item-heading"><a href="#/users/{{author._id}}">{{author.nick}}</a></h4>

	<p class="list-group-item-text" style="overflow: hidden; height:100%; width:100%;  white-space: pre-wrap; white-space: -moz-pre-wrap; word-wrap: break-word;">{{content}}</p>
</li>