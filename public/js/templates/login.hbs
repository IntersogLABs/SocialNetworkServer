<div class="container">
  <div class="row">
    <form role="form">
      <div class="col-md-2 col-md-offset-5">
	<div class="form-group">
	  <label>
	    Login
	    <input name="login" class="form-control"/>
	  </label>
	</div>
	<div class="form-group">
	  <label>
	    Password
	    <input type="password" name="password" class="form-control"/>
	  </label>
	</div>
	<div class="form-group">
	  <button class="btn btn-default login-submit">
	    Submit
	  </button>
	  or
	  <a href="#/register" class="btn btn-default btn-register">
	    Register
	  </a>
	</div>
      </div>
    </form>
  </div>
</div>
